{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./build",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@root/*": ["./src/*"],
      "@item/*": ["./src/item/*"],
      "@tracker/*": ["./src/tracker/*"],
      "@sql/*": ["./src/sql/*"],
      "@seal/*": ["./src/seal/*"],
      "@utils/*": ["./src/utils/*"],
      "@database/*": ["./src/database/*"]
    }
  }
}
